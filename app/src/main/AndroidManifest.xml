<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coder.androidchart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BarChartActivity" />
        <activity android:name=".PieChartActivity"/>
        <activity android:name=".RadarChartActivity"/>
        <activity android:name=".ScatterChartActivity"/>
        <activity android:name=".CandleChart"/>
        <activity android:name=".LineChartActivity"/>
        <activity android:name=".HorizontalChart"/>
        <activity android:name=".CombinedChartActivity"/>
    </application>
    <uses-permission android:name="android.permission.write_external_storage" />
</manifest>
